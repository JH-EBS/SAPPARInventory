<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sap.johnshopkins.sapparinventory.ChooseTemplateMenuActivity">


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count"
        android:id="@+id/btn_Count"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:id="@+id/btn_upload"
        android:layout_alignTop="@+id/btn_Count"
        android:layout_toRightOf="@+id/btn_Count"
        android:layout_toEndOf="@+id/btn_Count" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/btn_Delete"
        android:layout_alignTop="@+id/btn_upload"
        android:layout_toRightOf="@+id/btn_upload"
        android:layout_toEndOf="@+id/btn_upload" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/btn_Exit"
        android:layout_alignTop="@+id/btn_Delete"
        android:layout_toRightOf="@+id/btn_Delete"
        android:layout_toEndOf="@+id/btn_Delete" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enjoy -- Status Area"
        android:id="@+id/lbl_status_area"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="115dp" />
</RelativeLayout>
