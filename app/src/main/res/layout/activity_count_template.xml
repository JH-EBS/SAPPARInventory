<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sap.johnshopkins.sapparinventory.CountTemplateActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item No:"
        android:id="@+id/lbl_Item"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txt_Item_no"
        android:layout_alignBottom="@+id/lbl_Item"
        android:layout_centerHorizontal="true"
        android:text=" 12345" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desc:"
        android:id="@+id/lbl_desc"
        android:layout_below="@+id/txt_Item_no"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_desc"
        android:layout_alignBottom="@+id/lbl_desc"
        android:layout_alignLeft="@+id/txt_Item_no"
        android:layout_alignStart="@+id/txt_Item_no"
        android:text="desc for 12345" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAR Level:"
        android:id="@+id/lbl_par_level"
        android:layout_below="@+id/lbl_desc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/txt_par_level"
        android:layout_alignBottom="@+id/lbl_par_level"
        android:layout_alignLeft="@+id/txt_desc"
        android:layout_alignStart="@+id/txt_desc"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EA"
        android:id="@+id/txt_UOM"
        android:layout_alignBottom="@+id/txt_par_level"
        android:layout_toRightOf="@+id/txt_par_level"
        android:layout_toEndOf="@+id/txt_par_level"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mfg No:"
        android:id="@+id/lbl_mfg_no"
        android:layout_below="@+id/lbl_par_level"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26020"
        android:id="@+id/txt_mfg_no"
        android:layout_alignBottom="@+id/lbl_mfg_no"
        android:layout_alignLeft="@+id/txt_par_level"
        android:layout_alignStart="@+id/txt_par_level" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count:"
        android:id="@+id/lbl_Count"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txt_Count"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/txt_mfg_no"
        android:layout_alignStart="@+id/txt_mfg_no"
        android:text="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Items"
        android:id="@+id/btn_list_items"
        android:layout_below="@+id/txt_Count"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/btn_Exit"
        android:layout_alignTop="@+id/btn_list_items"
        android:layout_alignRight="@+id/txt_Item_no"
        android:layout_alignEnd="@+id/txt_Item_no" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enjoy - Status Area"
        android:id="@+id/lbl_status_area"
        android:layout_below="@+id/btn_list_items"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />
</RelativeLayout>
